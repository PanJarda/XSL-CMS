<config>
  <routes template="templates/pages/index.xsl">
    <route path="/" priority="1000" data="data/index.xml">Home</route>
    <route path="/about" priority="1000">About Me</route>
    <route path="/contact" priority="500">Contact Me</route>
    <route path="/download" priority="400">Download CV</route>
    <route path="/research" priority="900">Research</route>
    <route path="/publications" priority="800">Publications</route>
    <route path="/teaching" priority="700">Teaching</route>
    <route path="/gallery" priority="600">Gallery</route>
    <route path="/admin" hide="true" template="admin.xsl"/>
    <route path="*" hide="true" data="data/404.xml">404</route>
  </routes>
  <db name="jennifer_doe" server="localhost" username="root" password="">
    <table name="langs" on-delete="cascade">
      <col id="langId" primary="true" autoincrement="true">id</col>
      <col>name</col>
    </table>
    <table name="academic_position" id="ap">
      <col>end_year</col>
      <col>start_year</col>
      <col>position_name</col>
      <col>university</col>
      <col>department</col>
      <col many-to-one="langId">langId</col>
    </table>
    <table name="academic_positions">
      <col>headline</col>
      <col many-to-one="lang">lang</col>
    </table>
    <table name="bio" id="bio">
      <col>headline</col>
      <col>photo_url</col>
      <col>content</col>
      <col many-to-one="langId">lang</col>
    </table>
    <table name="education">
      <col>headline</col>
      <col many-to-one="langId">langId</col>
    </table>
    <table name="degree">
      <col>year</col>
      <col>degree</col>
      <col>university</col>
      <col>field</col>
      <col many-to-one="langId">lang</col>
    </table>
    <table name="article">
      <col>headline</col>
      <col>content</col>
      <col many-to-many="userId">authorId</col>
    </table>
    <table name="user">
      <col id="userId">id</col>
      <col>username</col>
      <col>password</col>
    </table>
  </db>
  <data>
    <brand>Jennifer Doe</brand>
  </data>
</config>